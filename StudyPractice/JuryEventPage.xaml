<Page x:Class="StudyPractice.JuryEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyPractice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JuryEventPage">

    <Grid Background="BlanchedAlmond">
        <ListBox x:Name="LB_Events" DisplayMemberPath="EventName" Margin="182,45,182,109" SelectionChanged="LB_Events_SelectionChanged" />
        <TextBox  x:Name="TB_EventScore" Text="Сотрите текст и напишите оценку выбрав мероприятие" Margin="244,346,244,0" VerticalAlignment="Top" />
        <Button  Content="Оценить" Click="BN_RateEvent_Click" Margin="352,369,352,0" VerticalAlignment="Top" />
        <Button  Content="Выйти из приложения" HorizontalAlignment="Left" Margin="648,198,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button  Content="Выйти" HorizontalAlignment="Left" Margin="692,173,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Page>
